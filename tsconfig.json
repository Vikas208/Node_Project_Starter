{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es6"],
		"module": "commonjs",
		"rootDir": "src",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"]
		},
		"sourceMap": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"files": ["src/server.ts"]
}
